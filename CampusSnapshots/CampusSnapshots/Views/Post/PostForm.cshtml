@model CampusSnapshots.ViewModels.PostFormViewModel

@{
    ViewData["Title"] = "PostForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        <!--Title-->
        <div class="col-md-6">
            <div class="row">
                @if (Model.FormType == CampusSnapshots.ViewModels.FormType.New)
                {
                    <h2>New Post</h2>
                }
                else
                {
                    <h2>Edit Post</h2>
                }
            </div>

            <!--Form-->
            <form asp-controller="Post" asp-action="SaveForm" class="form-horizontal">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                            <label asp-for="PostType"></label>
                            <select asp-for="PostType" asp-items="Html.GetEnumSelectList(Model.PostType.GetType())" class="form-control" id="postTypeSelect">
                                <option selected="selected" value="">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-0">
                        @if (Model.FormType == CampusSnapshots.ViewModels.FormType.New)
                        {
                            <button type="submit" class="btn btn-primary">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary">Save</button>
                        }
                    </div>
                </div>
                @Html.HiddenFor(p => p.Id)
            </form>
        </div>
    </div>
</div>
